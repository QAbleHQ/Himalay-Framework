<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Forgot Password Test Suite" parallel="tests" thread-count="5">

    <test name="verify user reset password using valid email">
        <classes>
            <class name="WebUITests.forgotPasswordTests.ForgotPasswordTests">
                <methods>
                    <include name="verify_user_reset_password_using_valid_email"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="verify click on reset button while resetField empty">
        <classes>
            <class name="WebUITests.forgotPasswordTests.ForgotPasswordTests">
                <methods>
                    <include name="verify_click_on_reset_button_while_resetField_empty"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="verify forgot password functionality when user enter spaces in emailBox">
        <classes>
            <class name="WebUITests.forgotPasswordTests.ForgotPasswordTests">
                <methods>
                    <include name="verify_forgot_password_functionality_when_user_enter_spaces_in_emailBox"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="verify forgot password functionality when user enter single quote in email">
        <classes>
            <class name="WebUITests.forgotPasswordTests.ForgotPasswordTests">
                <methods>
                    <include name="verify_forgot_password_functionality_when_user_enter_single_quote_in_email"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="verify_unregistered_user_reset_password_using_valid_email">
        <classes>
            <class name="WebUITests.forgotPasswordTests.ForgotPasswordTests">
                <methods>
                    <include name="verify unregistered user reset password using valid email"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="verify_user_reset_password_using_special_character_in_email">
        <classes>
            <class name="WebUITests.forgotPasswordTests.ForgotPasswordTests">
                <methods>
                    <include name="verify unregistered user reset password using valid email"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="To verify When Enter valid Email and Refresh URl">
        <classes>
            <class name="WebUITests.forgotPasswordTests.ForgotPasswordTests">
                <methods>
                    <include name="To_verify_When_Enter_valid_Email_and_Refresh_URl"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="To verify when only enter space in email text box">
        <classes>
            <class name="WebUITests.forgotPasswordTests.ForgotPasswordTests">
                <methods>
                    <include name="To_verify_when_only_enter_space_in_email_text_box"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>