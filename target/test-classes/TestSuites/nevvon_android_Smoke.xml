<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name = "Agency Panel Android App Smoke">

    <test name = "login_test">
        <classes>
            <class name = "MobileTests.login.LoginTests" >
                <methods>
                    <include name="login_test"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify when click on Need Help? link of login page">
        <classes>
            <class name = "MobileTests.login.LoginTests" >
                <methods>
                    <include name="To_verify_when_click_on_Need_Help_link_of_login_page"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "verify that when click on forgot password it opens pop up">
        <classes>
            <class name = "MobileTests.forgot_password.forgot_password_tests" >
                <methods>
                    <include name="verify_that_when_click_on_forgot_password_it_opens_pop_up"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "verify user is able to navigate back by clicking on back button">
        <classes>
            <class name = "MobileTests.profile_tests.profile_test" >
                <methods>
                    <include name="verify_user_is_able_to_navigate_back_by_clicking_on_back_button"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "verify that user is able to see profile details at profile option">
        <classes>
            <class name = "MobileTests.profile_tests.profile_test" >
                <methods>
                    <include name="verify_that_user_is_able_to_see_profile_details_at_profile_option"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "verify when click on Bookmark tab then it opens the bookmark page and Bookmark tab is highlighted">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="verify_when_click_on_Bookmark_tab_then_it_opens_the_bookmark_page_and_Bookmark_tab_is_highlighted"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name = "verify that user can bookmark the lesson">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="verify_that_user_can_bookmark_the_lesson"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "verify user can search any specific lesson using search option">
        <classes>
            <class name = "MobileTests.Search.search_tests" >
                <methods>
                    <include name="verify_user_can_search_any_specific_lesson_using_search_option"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify if user search anything outside module or lesson, it does not show any search result">
        <classes>
            <class name = "MobileTests.Search.search_tests" >
                <methods>
                    <include name="verify_if_user_search_anything_outside_module_or_lesson_it_does_not_show_any_search_result"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is able to logout by clicking on logout button">
        <classes>
            <class name = "MobileTests.Logout_Flow.Logout_test" >
                <methods>
                    <include name="To_verify_user_is_able_to_logout_by_clicking_on_logout_button"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify when user click on FAQ link, it opens help page">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_when_user_click_on_FAQ_link_it_opens_help_page"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is not able to submit query without selecting topic">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_user_is_not_able_to_submit_query_without_selecting_topic"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is able to submit query with adding all the data">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_user_is_able_to_submit_query_with_adding_all_the_data"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify input field to enter phone number or email is clickable or not phone number">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_input_field_to_enter_phone_number_or_email_is_clickable_or_not_phone_number"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify input field to enter phone number or email is clickable or not email address">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_input_field_to_enter_phone_number_or_email_is_clickable_or_not_email_address"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify Need Help link is clickable or not">
        <classes>
            <class name = "MobileTests.help.help_test" >
                <methods>
                    <include name="To_verify_Need_Help_link_is_clickable_or_not"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify by clicking on login button user should be redirected to Home page of the application">
        <classes>
            <class name = "MobileTests.login.LoginTests" >
                <methods>
                    <include name="To_verify_by_clicking_on_login_button_user_should_be_redirected_to_Home_page_of_the_application"></include>
                </methods>
            </class>
        </classes>
    </test>


</suite>