<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Forgot Password Android App Test Suite" parallel="tests" thread-count="5">

    <test name="verify that when click on forgot password it opens pop up">
        <classes>
            <class name="MobileTests.forgot_password.forgot_password_tests">
                <methods>
                    <include name="verify_that_when_click_on_forgot_password_it_opens_pop_up"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name="verify that by entering registered email user is able to receive reset password mail">
        <classes>
            <class name="MobileTests.forgot_password.forgot_password_tests">
                <methods>
                    <include
                            name="verify_that_by_entering_registered_email_user_is_able_to_receive_reset_password_mail"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="verify that by entering unregistered email user is able to receive reset password mail">
        <classes>
            <class name="MobileTests.forgot_password.forgot_password_tests">
                <methods>
                    <include
                            name="verify_that_by_entering_unregistered_email_user_is_not_able_to_receive_reset_password_mail"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="To verify when keeps user email field blank">
        <classes>
            <class name="MobileTests.forgot_password.forgot_password_tests">
                <methods>
                    <include name="To_verify_when_keeps_user_email_field_blank"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="To verify In forgot password, when user enter single quote in email">
        <classes>
            <class name="MobileTests.forgot_password.forgot_password_tests">
                <methods>
                    <include name="To_verify_In_forgot_password_when_user_enter_single_quote_in_email"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="To verify unregistered user reset password using valid email">
        <classes>
            <class name="MobileTests.forgot_password.forgot_password_tests">
                <methods>
                    <include name="To_verify_unregistered_user_reset_password_using_valid_email"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="To verify when enter email with space for forgot password">
        <classes>
            <class name="MobileTests.forgot_password.forgot_password_tests">
                <methods>
                    <include name="To_verify_when_enter_email_with_space_for_forgot_password"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="To verify when tab on send reset password email link without entering email">
        <classes>
            <class name="MobileTests.forgot_password.forgot_password_tests">
                <methods>
                    <include
                            name="To_verify_when_tab_on_send_reset_password_email_link_without_entering_email"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>