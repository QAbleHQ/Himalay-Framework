                    <include name="To_verify_by_providing_already_registered_Email_address"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify when click on continue button">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_when_click_on_continue_button"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>