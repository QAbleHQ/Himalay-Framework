<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="SignUp Page Android App Test Suite" parallel="tests" thread-count="5">

    <test name = "To verify the splash screen while creating account">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_the_splash_screen_while_creating_account"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify the content of page while user is creating account for the first time">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_the_content_of_page_while_user_is_creating_account_for_the_first_time"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify input field to enter phone number or email is clickable or not phone number">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_input_field_to_enter_phone_number_or_email_is_clickable_or_not_phone_number"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify input field to enter phone number or email is clickable or not email address">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_input_field_to_enter_phone_number_or_email_is_clickable_or_not_email_address"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user should not be able to proceed further by entering phone number less than 8 digit ">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_user_should_not_be_able_to_proceed_further_by_entering_phone_number_less_than_8_digit"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user should not be able to proceed further by entering phone number more than 10 digit ">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_user_should_not_be_able_to_proceed_further_by_entering_phone_number_more_than_10_digit"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify continue button is clickable or not after entering necessary details">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_continue_button_is_clickable_or_not_after_entering_necessary_details"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify Need Help link is clickable or not?">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_Need_Help_link_is_clickable_or_not"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify the content of phone number verification page">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_the_content_of_phone_number_verification_page"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify Send me an SMS is clickable or not">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_Send_me_an_SMS_is_clickable_or_not"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify Call me is clickable or not">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_Call_me_is_clickable_or_not"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify continue button is clickable or not after selection Call me/Send me an SMS button">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_continue_button_is_clickable_or_not_after_selection_Call_me_Send_me_an_SMS_button"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify the content of the validation page after clicking on Continue button">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_the_content_of_the_validation_page_after_clicking_on_Continue_button"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify by providing already registered phone number">
        <classes>
            <class name = "MobileTests.sign_up.sign_up_tests" >
                <methods>
                    <include name="To_verify_by_providing_already_registered_phone_number"></include>
                </methods>
