<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name = "ContactUs Android App Test Suite" parallel="tests" thread-count="5">

    <test name = "To verify that when Tap on contact us icon, it open contact us page for caregivers">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_that_when_Tap_on_contact_us_icon_it_open_contact_us_page_for_caregivers"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify when user click on FAQ link, it opens help page">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_when_user_click_on_FAQ_link_it_opens_help_page"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "User should be able to navigate back by clicking on back button">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="User_should_be_able_to_navigate_back_by_clicking_on_back_button"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify User should be able to select values from the dropdown">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_User_should_be_able_to_select_values_from_the_dropdown"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is able to submit the query without entering any data">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_user_is_able_to_submit_the_query_without_entering_any_data"></include>
                </methods>
            </class>
        </classes>
    </test>


    <test name = "To verify user is not able to submit query without selecting topic">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_user_is_not_able_to_submit_query_without_selecting_topic"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is not able to submit query without entering description">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_user_is_not_able_to_submit_query_without_entering_description"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is able to submit query without attaching file">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_user_is_able_to_submit_query_without_attaching_file"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user that when user click on OK button, it redirects to lesson">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_user_that_when_user_click_on_OK_button_it_redirects_to_lesson"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is able to submit query with adding all the data">
        <classes>
            <class name = "MobileTests.contactUs.contactUs_Test" >
                <methods>
                    <include name="To_verify_user_is_able_to_submit_query_with_adding_all_the_data"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>