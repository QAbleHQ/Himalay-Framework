<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name = "Home page Android App Test Suite" parallel="tests" thread-count="5">

    <test name = "To verify user can change agencies from dropdown at the upper right side">
        <classes>
            <class name = "MobileTests.home.home_test" >
                <methods>
                    <include name="To_verify_user_can_change_agencies_from_dropdown_at_the_upper_right_side"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify if no program is assigned to user then message is shown at home screen">
        <classes>
            <class name = "MobileTests.home.home_test" >
                <methods>
                    <include name="To_verify_if_no_program_is_assigned_to_user_then_message_is_shown_at_home_screen"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is able to go back by clicking on back navigation button">
        <classes>
            <class name = "MobileTests.home.home_test" >
                <methods>
                    <include name="To_verify_user_is_able_to_go_back_by_clicking_on_back_navigation_button"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user can see program and modules if CS assigns program">
        <classes>
            <class name = "MobileTests.home.home_test" >
                <methods>
                    <include name="To_verify_user_can_see_program_and_modules_if_CS_assigns_program"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify circular progress bar shows the progress of the overall program">
        <classes>
            <class name = "MobileTests.home.home_test" >
                <methods>
                    <include name="To_verify_circular_progress_bar_shows_the_progress_of_the_overall_program"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is able to refresh the home page">
        <classes>
            <class name = "MobileTests.home.home_test" >
                <methods>
                    <include name="To_verify_user_is_able_to_refresh_the_home_page"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify CG can change agency from notification page">
        <classes>
            <class name = "MobileTests.home.home_test" >
                <methods>
                    <include name="To_verify_CG_can_change_agency_from_notification_page"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify CG can change agency from Bookmark page">
        <classes>
            <class name = "MobileTests.home.home_test" >
                <methods>
                    <include name="To_verify_CG_can_change_agency_from_bookmark_page"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>