<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name = "Bookmark Android App Test Suite" parallel="tests" thread-count="5">

    <test name = "verify when click on Bookmark tab then it opens the bookmark page and Bookmark tab is highlighted">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="verify_when_click_on_Bookmark_tab_then_it_opens_the_bookmark_page_and_Bookmark_tab_is_highlighted"></include>
                </methods>
            </class>
        </classes>
    </test>
    <test name = "verify that user can bookmark the lesson">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="verify_that_user_can_bookmark_the_lesson"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify bookmarked video is shown in bookmarks tab">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="To_verify_bookmarked_video_is_shown_in_bookmarks_tab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify when disselect bookmark at the video, it is removed from the bookmarks tab">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="To_verify_when_disselect_bookmark_at_the_video_it_is_removed_from_the_bookmarks_tab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify that user can bookmark the lesson">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="To_verify_that_user_can_bookmark_the_lesson"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify after deactivated the program, provider cannot see the bookmarked lesson of that program">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="To_verify_after_deactivated_the_program_provider_cannot_see_the_bookmarked_lesson_of_that_program"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user can play video from bookmark tab">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="To_verify_user_can_play_video_from_bookmark_tab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name = "To verify user is able to resume the video">
        <classes>
            <class name = "MobileTests.bookmark.bookmark_Test" >
                <methods>
                    <include name="To_verify_user_is_able_to_resume_the_video"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>